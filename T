<script>
/* hearts */
const heartsWrap=document.getElementById('hearts');
function makeHeart(){
  const h=document.createElement('div');
  h.className='heart';
  const s=10+Math.random()*20;
  h.style.width=h.style.height=s+'px';
  h.style.left=Math.random()*100+'vw';
  h.style.animationDuration=(5+Math.random()*7)+'s';
  h.style.opacity=0.3+Math.random()*0.5;
  heartsWrap.appendChild(h);
  setTimeout(()=>h.remove(),12000);
}
setInterval(makeHeart,200);
for(let i=0;i<16;i++) makeHeart();

/* buttons */
const noBtn=document.getElementById('noBtn');
const yesBtn=document.getElementById('yesBtn');
const overlay=document.getElementById('overlay');

function moveNo(){
  const r=noBtn.getBoundingClientRect();
  const x=Math.random()*(window.innerWidth-r.width-10);
  const y=Math.random()*(window.innerHeight-r.height-10);
  noBtn.style.position='fixed';
  noBtn.style.left=Math.max(5,x)+'px';
  noBtn.style.top=Math.max(5,y)+'px';
}
noBtn.addEventListener('mouseenter',moveNo);
noBtn.addEventListener('touchstart',e=>{e.preventDefault();moveNo();},{passive:false});

yesBtn.onclick=()=>overlay.style.display='grid';
overlay.onclick=()=>overlay.style.display='none';
</script>
